@model Dish

<div>
    <h1 class="mb-4">Add new dish</h1>
    <form asp-controller="Admin" asp-action="AddMenuItem" method="post">
        <div class="card">
            <div class="card-body">
                <label for="Name">Dish name:</label>
                <input asp-for="Name" class="form-control" id="Name" name="Name" placeholder="Dish name" required />
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <label for="Description">Description:</label>
                    <textarea asp-for="Description" class="form-control" id="Description" name="Description" rows="3" placeholder="Description" required>@Model.Description</textarea>
                </li>
                <li class="list-group-item">
                    <label for="Price">Price:</label>
                    <input asp-for="Price" type="text" step="any" class="form-control" id="Price" name="Price" value="@Model.Price" placeholder="0" required />

                </li>   
                <li class="list-group-item">
                    <label>Availability:</label>
                    <div class="form-check">
                        <input asp-for="IsAvailable" type="radio" class="form-check-input" id="AvailableYes" name="IsAvailable" value="true" />
                        <label class="form-check-label" for="AvailableYes">Available</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="IsAvailable" type="radio" class="form-check-input" id="AvailableNo" name="IsAvailable" value="false" />
                        <label class="form-check-label" for="AvailableNo">Out of stock</label>
                    </div>
                </li>
            </ul>


            <div class="card-body">
                <button type="submit" class="btn btn-success">Save Changes</button>
                <a asp-action="EditMenu" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>
