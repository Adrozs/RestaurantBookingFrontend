@model List<Dish>

@{
    ViewData["Title"] = "Menu";
}

<section class="container my-5">
    <h1 class="mb-4">THE MENU</h1>

    @foreach (var dish in Model)
    {
        <div class="card mb-4 h-100 shadow-sm">
            <div class="card-body">
                <h3 class="card-title">@dish.Name</h3>
                <p class="card-text">@dish.Description</p>
                <p class="card-text"> <strong>Price: </strong>$@dish.Price</p>
                <p class="card-text">
                    <strong>Status: </strong>
                    @if (dish.IsAvailable)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Out of stock</span>
                    }
                </p>
            </div>

            <div class="card-body d-flex">
                <form asp-controller="Admin" asp-action="EditMenuItem" method="get">
                    <input type="hidden" name="dishId" value="@dish.Id" />
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form>

                <form asp-controller="Admin" asp-action="DeleteMenuItem" method="post">
                    <input type="hidden" name="dishId" value="@dish.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    }
    <br />
    <a asp-controller="Admin" asp-action="AddMenuItem" class="btn btn-success">Create new</a>

</section>